{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Node Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "disableOptimisticBPs": true,
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-i"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}